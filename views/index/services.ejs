<!-- Services Section Begin -->
<section class="services spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="services__title">
                    <div class="section-title">
                        <span>Our services</span>
                        <h2>What We do?</h2>
                    </div>
                    <p>If you hire a videographer of our team you will get a video professional to make a custom
                        video for your business and, once the project is over.</p>
                    <a href="#" class="primary-btn">View all services</a>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="row">
                    <% dataJson.paragraph.forEach(function(paragraph){ %>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="services__item">
                            <div class="services__item__icon">
                                <img src="/images/icons/<%= paragraph.icon %>" alt="">
                            </div>
                            <h4>Motion graphics</h4>
                            <p><%= paragraph.p %></p>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Services Section End -->